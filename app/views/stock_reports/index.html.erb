<p id="notice"><%= notice %></p>

<h1>Listing Stock Reports</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Sub category</th>
      <th>No of stock</th>
      <th>Colors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stock_reports.each do |stock_report| %>
      <tr>
        <td><%= stock_report.category.name %></td>
        <td><%= stock_report.sub_category.name %></td>
        <td><%= stock_report.no_of_stock %></td>
        <td><%= stock_report.colors %></td>
        <td><%= link_to 'Show', stock_report %></td>
        <td><%= link_to 'Edit', edit_stock_report_path(stock_report) %></td>
        <td><%= link_to 'Destroy', stock_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

