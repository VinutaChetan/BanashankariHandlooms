<p id="notice"><%= notice %></p>

<h1>Listing Employee Details</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Advance payment</th>
      <th>Date of joining</th>
      <th>Remaining balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_details.each do |employee_detail| %>
      <tr>
        <td><%= employee_detail.name %></td>
        <td><%= employee_detail.address %></td>
        <td><%= employee_detail.advance_payment %></td>
        <td><%= employee_detail.date_of_joining %></td>
        <td><%= employee_detail.remaining_balance %></td>
        <td><%= link_to 'Show', employee_detail %></td>
        <td><%= link_to 'Edit', edit_employee_detail_path(employee_detail) %></td>
        <td><%= link_to 'Destroy', employee_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

