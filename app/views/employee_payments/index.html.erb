<p id="notice"><%= notice %></p>

<h1>Listing Employee Payments</h1>

<table>
  <thead>
    <tr>
      <th>Employee details</th>
      <th>Date of payment</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_payments.each do |employee_payment| %>
      <tr>
        <td><%= employee_payment.employee_details_id %></td>
        <td><%= employee_payment.date_of_payment %></td>
        <td><%= employee_payment.amount %></td>
        <td><%= link_to 'Show', employee_payment %></td>
        <td><%= link_to 'Edit', edit_employee_payment_path(employee_payment) %></td>
        <td><%= link_to 'Destroy', employee_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

